CREATE OR REPLACE FUNCTION CLAHRA(ENO NUMBER) RETURN NUMBER
IS
HRA EMP.SAL%TYPE;
TOTAL EMP.SAL%TYPE;
ESAL EMP.SAL%TYPE;
BEGIN
SELECT SAL INTO ESAL FROM EMP WHERE EMPNO=ENO;
HRA:=20*ESAL/100;
TOTAL:=HRA+ESAL;
RETURN TOTAL;
END;
OUTPUT:
SQL> @5a.sql
13 /
Function created.
/*CALLING FUCNTION*/
/*CALLING FUNCTION*/
SET SERVEROUTPUT ON;
DECLARE
Prepared By KCHV Page 10
ENO NUMBER(4):=&ENO;
T EMP.SAL%TYPE;
BEGIN
T:=CLAHRA(ENO);
DBMS_OUTPUT.PUT_LINE('EMPLOYEE :'||ENO);
DBMS_OUTPUT.PUT_LINE('SAL IS :'||T);
END;
OUTPUT:
SQL> @51A.SQL
9 /
Enter value for eno: 7369
old 2: ENO NUMBER(4):=&ENO;
new 2: ENO NUMBER(4):=7369;
EMPLOYEE :7369
SAL IS :960
PL/SQL procedure successfully completed.
