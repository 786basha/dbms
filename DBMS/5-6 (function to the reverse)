SET SERVEROUTPUT ON;
CREATE OR REPLACE FUNCTION REVERSE (NUM1 NUMBER) RETURN NUMBER
IS
NUM2 NUMBER(3);
REV NUMBER(3);
R NUMBER(3);
BEGIN
NUM2:=NUM1;
REV:=0;
Prepared By KCHV Page 15
WHILE NUM1>0
LOOP
R:=NUM2 MOD 10;
REV:=(REV*10)+R;
NUM2:=FLOOR(NUM2/10);
END LOOP;
RETURN REV;
END;
OUTPUT:
