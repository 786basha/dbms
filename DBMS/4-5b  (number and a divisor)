DECLARE
EXPR1 EXCEPTION;
DIVIDEND NUMBER(3);
DIV NUMBER(3);
R NUMBER(3);
BEGIN
DIVIDEND:=&DIVIDEND;
DIV:=&DIV;
IF DIV<=10 THEN
RAISE EXPR1;
END IF;
R:=MOD(DIVIDEND,DIV);
DBMS_OUTPUT.PUT_LINE('REMAINDER IS '||R);
EXCEPTION
WHEN EXPR1 THEN
DBMS_OUTPUT.PUT_LINE('ERROR IN DIVISOR');
END;
Prepared By KCHV Page 9
OUTPUT:
SQL> @5B.SQL
21 /
Enter value for dividend: 50
Enter value for div: 10
ERROR IN DIVISOR
PL/SQL procedure successfully completed