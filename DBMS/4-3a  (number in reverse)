DECLARE
NUM1 NUMBER(5);
NUM2 NUMBER(5);
REV NUMBER(5);
R NUMBER(3);
BEGIN
NUM1:=&NUM1;
NUM2:=NUM1;
REV:=0;
WHILE NUM1>0
LOOP
R:=NUM1 MOD 10;
REV:=(REV*10)+R;
NUM1:=FLOOR(NUM1/10);
END LOOP;
DBMS_OUTPUT.PUT_LINE('THE REVERSE OF'||NUM2||'GIVEN NUMBER IS='||REV);
END;
OUTPUT:
SQL> @3A.SQL
18 /
Enter value for num1: 254
old 7: NUM1:=&NUM1;
new 7: NUM1:=254;
THE REVERSE OF254GIVEN NUMBER IS=452
PL/SQL procedure successfully completed.